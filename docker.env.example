# ===================================
# Docker Compose Environment Variables
# ===================================
# Copy this file to .env in the root directory:
# cp docker.env.example .env

# Port Configuration
# Port where the frontend will be accessible
FRONTEND_PORT=3000

# Port where the filebrowser will be accessible
FILEBROWSER_PORT=8080

# User/Group IDs (for filebrowser)
# Use your host user/group IDs to avoid permission issues
# Run: id -u (for UID) and id -g (for GID)
UID=1000
GID=1000

# Frontend URLs
# URL where filebrowser is accessible
NEXT_PUBLIC_FILEBROWSER_URL=http://localhost:8080

# URL where the backend API is accessible (backend runs with PM2)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8091

