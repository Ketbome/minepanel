{
  "name": "minepanel-root",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm run lint --prefix backend",
    "lint:frontend": "npm run lint --prefix frontend",
    "format": "npm run format --prefix backend",
    "test": "npm run test --prefix backend"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "15.5.0"
  },
  "lint-staged": {
    "backend/**/*.ts": "npm run lint:backend --",
    "frontend/**/*.{ts,tsx}": "npm run lint:frontend --"
  }
}
